<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_ll"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="#282828"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_check"
            android:gravity="center"
            android:onClick="home"
            android:text="主页"
            android:textColor="#F73357"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/main_tv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/shopping"
            android:gravity="center"
            android:onClick="cart"
            android:text="购物车"
            android:textColor="#999999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/main_tv_finsh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/completed"
            android:gravity="center"
            android:onClick="finsh"
            android:text="已完成"
            android:textColor="#999999"
            android:textSize="16sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_ll" />


</RelativeLayout>
